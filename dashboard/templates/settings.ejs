<%- include("../assets/partials/header", { bot, user, path, title: "Home" }) %>

<% if (alert) { %>
  <p><%= alert %></p><br>
<% } %>

<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>

<style>
  .MainBody{
    position: relative;
    left: 30px;
  }
</style>

<script>
var alert = <% alert %>
function showAlert() {
  alert(alert)
}
</script>

<div class="MainBody">
  <h1>Editing Server: <%= guild.name %></h1>
  
  <form style="margin-top: 1em;" method="POST"> <!-- method="post" triggers a POST request to the same url with the body of the form control inputs -->
    <p>Set Prefix:</p>
    <input class="form-control" type="text" name="prefix" value="<%= settings.prefix %>" placeholder="Your new prefix"><br><br>
    <button class="btn btn-dark" type="submit">Save Settings</button>
  </form>
</div>

<%- include("../assets/partials/footer") %>